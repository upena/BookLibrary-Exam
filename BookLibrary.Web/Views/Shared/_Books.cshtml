@model List<BookViewModel>

<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                Book Title
            </th>
            <th></th>
        </tr>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="2">
                    <div class="alert alert-info fade in">
                        <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Books</strong> No books added.
                    </div>

                </td>
            </tr>
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].Title)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => modelItem[i].Id, new { id = Model[i].Id + "_Id" })
                    <button id="DeleteBook" type="button" class="btn btn-link"
                            data-target="#deleteConfirmModal" data-toggle="modal" data-id=@i>
                        Delete
                    </button>
                </td>
            </tr>
        }
    </table>
</div>

