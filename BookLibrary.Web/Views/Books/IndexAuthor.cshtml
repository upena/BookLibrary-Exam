@model List<BookViewModel>
@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books by Author</h2>

@using (Html.BeginForm("IndexAuthor", "Books", FormMethod.Get))
{
    <div id="divSearch" class="form-inline">
        <br />
        <div class="form-group">
            @Html.DisplayNameFor(model => model.FirstOrDefault().AuthorId)
            @Html.DropDownList("AuthorId", null, "Select", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">
                Search
            </button>
        </div>
    </div>
}
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Editorial)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial)
            </td>
        </tr>
    }

</table>
